<%- include("partials/header") -%>

<h1>Home</h1>
<p><%= entry1 %></p>

<% blogPosts.forEach(function(post) { %>
    <h1><%= post.entryTitle %></h1>
    <% if (post.entryText.length > 100) { %>
        <p><%= post.entryText.slice(0,100) %> ... <a href="/posts/<%= post.entryTitle %>">Read More</a></p>
    <% } else { %>
        <p><%= post.entryText %> <a href="/posts/<%= post.entryTitle %>">Read More</a></p>
    <% } %>
<% }) %>
    
<%- include("partials/footer") -%> 